{
  "name": "mysonai-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "echo 'Tests temporarily disabled'",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "prepare": "husky install",
    "check": "npm run lint && npm run format:check && npm run type-check && npm run test",
    "check:all": "npm run check && npm run build",
    "i18n:check": "tsx scripts/i18n-check.ts",
    "layout:check": "tsx scripts/layout-test.ts",
    "seo:check": "tsx scripts/seo-check.ts",
    "features:check": "tsx scripts/feature-flags-check.ts",
    "auth:check": "tsx scripts/auth-check.ts",
    "payment:check": "tsx scripts/payment-check.ts",
    "blog-docs:check": "tsx scripts/blog-docs-check.ts",
    "performance:check": "tsx scripts/performance-check.ts",
    "analyze": "cross-env ANALYZE=true npm run build",
    "analytics-logging:check": "tsx scripts/analytics-logging-check.ts",
    "legal-pages:check": "tsx scripts/legal-pages-check.ts",
    "testing:check": "tsx scripts/testing-check.ts",
    "docker:build": "docker build -t mysonai/website:latest .",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:prod": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "deploy:staging": "bash scripts/deploy.sh latest staging",
    "deploy:production": "bash scripts/deploy.sh latest production",
    "backup": "bash scripts/backup.sh",
    "health:check": "curl -f http://localhost:3000/health || exit 1",
    "cicd:check": "tsx scripts/cicd-check.ts",
    "code-style:check": "tsx scripts/code-style-check.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@radix-ui/react-avatar": "^1.1.1",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.2.15",
    "@stripe/stripe-js": "^7.9.0",
    "@supabase/auth-ui-react": "^0.4.7",
    "@supabase/auth-ui-shared": "^0.1.8",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.38.4",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "critters": "^0.0.25",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.294.0",
    "next": "^14.2.32",
    "next-themes": "^0.2.1",
    "openai": "^5.19.1",
    "postcss": "^8",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.48.2",
    "sonner": "^2.0.7",
    "stripe": "^18.5.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^3.3.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "cross-env": "^10.0.0",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "lint-staged": "^15.2.0",
    "playwright": "^1.55.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.5",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
